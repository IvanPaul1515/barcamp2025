---
import { Image } from 'astro:assets'
import Accordion from '@components/accordion/Accordion.astro'
import AccordionItem from '@components/accordion/AccordionItem.astro'
import Container from '@components/container/Container.astro'
import SpeakersSection from '@components/SpeakerSection/Speakers.astro'
import Title from '@components/title/Title.astro'
import Layout from '@layouts/Layout.astro'
import { ABOUT, NUMBERS } from '@lib/data'
---

<Layout>
	<!-- Hero Section -->
    <section id="inicio" class="relative pt-10 lg:pt-12 bg-transparent dark:bg-transparent">
        <Image
                id="hero"
                src="/images/logo-2025-dark.png"
                alt="Hero image"
                width={1300}
                height={384}
                class="max-h-96 mx-auto"
        />


        <div class="mx-auto mt-10 max-w-7xl px-6 flex flex-col lg:flex-row items-start lg:items-center justify-center gap-10 lg:gap-16">
            <div class="text-center lg:text-left lg:w-1/2">
                <h1 class="font-bold text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight text-[#161616] dark:text-white">
                    Vive la experiencia Barcamp 2025<br />
                    <span class="text-transparent bg-clip-text bg-gradient-to-br from-[#FBA030] via-[#FE9916] to-[#ED5E0B]">
					Noviembre 15
				</span><br />
                    PUCMM Santiago
                </h1>
            </div>


            <div
                    class="flex flex-col items-center text-center gap-4 p-8
           bg-[#FFF1E5] dark:bg-[#361804]
           rounded-3xl border border-[#ED5E0B]/30
           shadow-[0_8px_30px_rgba(251,160,48,0.25)]">
                <img src="/images/ticket.png" alt="Ticket Barcamp 2025" class="w-48 h-auto mb-2" />

                <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-br from-[#FBA030] via-[#FE9916] to-[#ED5E0B]">
                    ENTRADAS DISPONIBLES
                </h2>

                <p class="text-lg md:text-xl font-semibold text-[#361804] dark:text-white/80">
                    CÓDIGO, CONEXIÓN y COMUNIDAD
                </p>

                <a
                        href="https://appweb.pucmm.edu.do/RegistroEvento/EditInscripcionEvento.aspx?id=84"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="mt-2 inline-block"
                >
                    <button class="px-6 py-3 text-lg font-semibold text-white rounded-2xl
                       bg-gradient-to-r from-[#FBA030] via-[#FE9916] to-[#ED5E0B]
                       hover:opacity-90 hover:shadow-lg hover:scale-105
                       transition-all duration-300 ease-in-out cursor-pointer"
                                >
                        Adquiere tu entrada
                    </button>
                </a>

            </div>

        </div>
        <!-- Background Orange Spot -->
        <span class="absolute w-24 h-24 -z-10 right-4 bottom-24 rounded-3xl bg-primary blur-xl opacity-80"></span>
        <span class="w-4/12 lg:w-2/12 aspect-square bg-gradient-to-tr from-[#FBA030] to-[#ED5E0B] absolute top-40 lg:left-0 rounded-full skew-y-12 blur-2xl opacity-20 lg:opacity-40 skew-x-12 rotate-90"></span>
    </section>


	<!-- Number Section -->
	<section id="numbers">
		<div
			class="flex flex-col lg:flex-row items-center justify-center gap-y-4 gap-x-20 p-6 bg-white border border-gray-200 shadow-lg dark:bg-[#361804] dark:border-[#210e05] rounded-4xl"
		>
			{
				NUMBERS.map((number) => (
					<div class="flex flex-col items-center justify-center gap-2 min-w-56">
						<h2 class="text-xl font-semibold text-center text-black sm:text-2xl md:text-4xl dark:text-white">
							{number.value}
						</h2>
						<p class="text-center text-black/70 dark:text-white/70">
							{number.description}
						</p>
					</div>
				))
			}
		</div>
	</section>

	<!-- About Section -->
	<section id="acerca">
		<div class="flex flex-col w-full mx-auto gap-y-10">
			<Title>Acerca del Evento</Title>
			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-2 lg:gap-8">
				{
					ABOUT.map(({ title, description }) => (
						<div class="relative p-10 overflow-hidden bg-white dark:bg-[#361804] dark:border-[#210e05] border border-gray-300 shadow-lg rounded-3xl">
							<div class="flex flex-col gap-y-4">
								<h2 class="text-lg font-semibold text-black md:text-xl dark:text-white">
									{title}
								</h2>
								<p class="text-black/80 dark:text-white/80 md:text-lg">
									{description}
								</p>
							</div>
							<span class="absolute w-32 rounded-full aspect-square -bottom-16 -right-16 bg-primary/10" />
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- Location Section -->
	<section id="location">
		<div class="flex flex-col w-full mx-auto gap-y-10">
			<Title>Ubícanos</Title>
			<section
				class="w-full px-5 mx-auto space-y-10 max-w-7xl sm:px-2 md:px-2 lg:px-5 md:space-y-12"
			>
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.3070984555106!2d-70.68684148398134!3d19.442321986878877!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8eb1cf6f0a95c9f9%3A0x77ca6ffcce6b71a3!2sEdificio%20Padre%20Arroyo!5e0!3m2!1ses!2sdo!4v1666205630950!5m2!1ses!2sdo"
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"
					class="w-full h-[600px] rounded-3xl"></iframe>
			</section>
		</div>
	</section>

	<!-- Code of Conduct Section -->
	<section id="código-de-conducta">
		<div class="flex flex-col w-full mx-auto gap-y-10">
			<Title>Código de Conducta</Title>

			<div class="grid gap-6 sm:grid-cols-1 lg:grid-cols-1 lg:gap-8">
				<Accordion>
					<AccordionItem header="Código de conducta">
						<div class="modal-body">
							<h2
								class="text-lg font-semibold text-black md:text-xl dark:text-white"
							>
								Código de conducta
							</h2>
							<p class="md:text-lg text-black/80 dark:text-white/80">
								El BarcampRD es un evento de "desconferencias" tecnológicas,
								cuyo contenido es auto-generado por los participantes y su
								orientación es hacia el desarrollo de Software y tecnología en
								general. Nosotros trabajamos para un evento inclusivo, con
								sesiones que comprenden diferentes niveles: principiante,
								intermedio y avanzado. Las desconferencias ofrecen una
								oportunidad única para interactuar con profesionales del área y
								la colaboración entre desarrolladores, empresas de tecnología y
								emprendedores. Promovemos el intercambio abierto de ideas y
								expresiones, pero esperamos que todos los participantes
								(incluidos conferencistas, patrocinadores y voluntarios) cumplan
								con nuestro código de conducta.
							</p>
							<h3
								class="text-lg font-semibold text-black md:text-xl dark:text-white"
							>
								Comportamiento inaceptable
							</h3>
							<p class="md:text-lg text-black/80 dark:text-white/80">
								Nosotros queremos que su participación en este evento sea una
								experiencia agradable para todos, independientemente del género,
								la identidad y la expresión de género, la edad, la orientación
								sexual, la discapacidad, la apariencia física, el tamaño del
								cuerpo, la raza, el origen étnico, la religión (o falta de ella)
								o sus preferencias tecnológicas. No toleramos el acoso de los
								participantes del evento de ninguna forma. El lenguaje y las
								imágenes de carácter sexual no son apropiados para ningún lugar
								del evento, incluidas charlas, talleres, fiestas, Twitter y
								otros medios en línea. Los participantes del evento que violen
								estas reglas pueden ser sancionados o expulsados del evento a
								discreción de los organizadores del evento.
							</p>
							<p class="md:text-lg text-black/80 dark:text-white/80">
								El comportamiento abusivo incluye, pero no se limita a:
							</p>
							<ul class="pl-8 mb-4 list-disc">
								<li class="md:text-lg text-black/80 dark:text-white/80">
									Comentarios verbales ofensivos o conductas discriminatorias
									relacionadas con el género, identidad y expresión de género,
									orientación sexual, discapacidad, apariencia física, tamaño
									corporal, edad, raza, nacionalidad, etnia o religión.
								</li>
								<li class="md:text-lg text-black/80 dark:text-white/80">
									Uso de imágenes, actividades u otro material sexual durante
									una presentación.
								</li>
								<li class="md:text-lg text-black/80 dark:text-white/80">
									La intimidación deliberada, el acecho o el seguimiento.
								</li>
								<li class="md:text-lg text-black/80 dark:text-white/80">
									Acosar tomando fotografía o grabación de videos.
								</li>
								<li class="md:text-lg text-black/80 dark:text-white/80">
									Interrupciones continuadas de charlas u otros eventos.
								</li>
								<li class="md:text-lg text-black/80 dark:text-white/80">
									Contacto físico inapropiado.
								</li>
								<li class="md:text-lg text-black/80 dark:text-white/80">
									Atención sexual no deseada.
								</li>
								<li class="md:text-lg text-black/80 dark:text-white/80">
									Abogar por, o alentar, cualquiera de los comportamientos
									anteriores.
								</li>
							</ul>
							<h3
								class="text-lg font-semibold text-black md:text-xl dark:text-white"
							>
								Consecuencias del comportamiento inaceptable
							</h3>
							<p class="md:text-lg text-black/80 dark:text-white/80">
								Si un participante incurre en un comportamiento abusivo, los
								organizadores del evento pueden tomar cualquier acción que
								estimen oportuna, incluyendo advertencias a quien incurra en el
								acto o su expulsión del evento.
							</p>
							<h3
								class="text-lg font-semibold text-black md:text-xl dark:text-white"
							>
								Denuncia
							</h3>
							<p class="md:text-lg text-black/80 dark:text-white/80">
								Si estás sufriendo algún abuso, has sido testigo de abusos sobre
								otra persona, o tienes alguna otra preocupación, por favor
								contacta con el personal del evento inmediatamente a través del
								correo electrónico logistica@barcamp.org.do Esperamos que los
								participantes sigan estas reglas en nuestras conferencias y en
								los eventos relacionados.
							</p>
						</div>
					</AccordionItem>
				</Accordion>
			</div>
		</div>
	</section>


    <section id="charlistas">
        <SpeakersSection />
    </section>


    <!-- Patrocinadores -->
    <section id="patrocinadores" class="py-20">
        <Container className="space-y-10">
            <div class="text-center max-w-3xl mx-auto">
                <Title>Patrocinadores</Title>
            </div>

            <!-- PLATINIUM  -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- The Ksquare Group -->
                <div class="relative p-5 sm:p-6 rounded-3xl bg-white dark:bg-[#361804]
                  border-2 border-[#FBA030] shadow-[0_8px_30px_rgba(251,160,48,0.25)]
                  flex items-center justify-center transition-transform duration-300 hover:scale-105">
                    <span class="absolute -top-3 left-5 px-3 py-1 text-xs font-semibold rounded-full bg-[#FBA030] text-white shadow">
                      GEEK PLATINIUM
                    </span>
                    <a href="https://www.theksquaregroup.com/" target="_blank" rel="noopener noreferrer">
                        <img src="/images/sponsors/TheKsquareGroup.png" alt="The Ksquare Group"
                             class="h-20 sm:h-24 lg:h-28 w-auto object-contain rounded-2xl" />
                    </a>
                </div>

                <!-- NadServ -->
                <div class="relative p-5 sm:p-6 rounded-3xl bg-white dark:bg-[#361804]
                  border-2 border-[#FBA030] shadow-[0_8px_30px_rgba(251,160,48,0.25)]
                  flex items-center justify-center transition-transform duration-300 hover:scale-105">
                    <span class="absolute -top-3 left-5 px-3 py-1 text-xs font-semibold rounded-full bg-[#FBA030] text-white shadow">
                      GEEK PLATINIUM
                    </span>
                    <a href="https://nadserv.com/" target="_blank" rel="noopener noreferrer">
                        <img src="/images/sponsors/LogoNadserv.png" alt="NadServ"
                             class="h-20 sm:h-24 lg:h-28 w-auto object-contain rounded-2xl" />
                    </a>
                </div>
            </div>

            <!-- GOLD -->
            <div class="flex justify-center">
                <div class="relative p-5 sm:p-6 rounded-3xl bg-white dark:bg-[#361804]
                  border border-[#ED5E0B]/60 dark:border-[#FBA030]/70
                  shadow-[0_8px_30px_rgba(251,160,48,0.2)]
                  flex items-center justify-center transition-transform duration-300 hover:scale-105 max-w-4xl w-full">
                    <span class="absolute -top-3 left-5 px-3 py-1 text-xs font-semibold rounded-full bg-[#FE9916] text-white shadow">
                      GEEK GOLD
                    </span>
                    <a href="https://popularenlinea.com/personas/Paginas/Home.aspx" target="_blank" rel="noopener noreferrer">
                        <img src="/images/sponsors/Popular.png" alt="Banco Popular"
                             class="h-16 sm:h-20 lg:h-24 w-auto object-contain rounded-2xl" />
                    </a>
                </div>
            </div>

            <!-- SILVER -->
            <div class="flex justify-center">
                <div class="relative p-5 sm:p-6 rounded-3xl bg-white dark:bg-[#361804]
                  border border-[#ED5E0B]/60 dark:border-[#FBA030]/70
                  shadow-[0_8px_30px_rgba(251,160,48,0.2)]
                  flex items-center justify-center transition-transform duration-300 hover:scale-105 max-w-3xl w-full">
                    <span class="absolute -top-3 left-5 px-3 py-1 text-xs font-semibold rounded-full bg-[#ED5E0B] text-white shadow">
                      GEEK SILVER
                    </span>
                    <a href="https://coopsanjose.com.do/sobre-nosotros/" target="_blank" rel="noopener noreferrer">
                        <img src="/images/sponsors/CooperativaSanJose.png" alt="Cooperativa San José"
                             class="h-16 sm:h-20 lg:h-24 w-auto object-contain rounded-2xl" />
                    </a>
                </div>
            </div>

            <!-- GEEK -->
            <div class="flex justify-center flex-wrap gap-6 mt-4">
                <!-- CICC -->
                <div class="relative p-4 sm:p-5 rounded-2xl bg-white dark:bg-[#361804]
              border border-gray-200 dark:border-[#FBA030]/60
              transition-transform duration-300 hover:scale-105">
                    <span class="absolute -top-3 left-5 px-3 py-1 text-xs font-semibold rounded-full bg-[#FBA030] text-white shadow">
                      Crew
                    </span>
                    <a href="https://ce-icc.pucmm.edu.do/" target="_blank" rel="noopener noreferrer">
                        <img src="/images/sponsors/cicc.png" alt="CICC"
                             class="h-10 sm:h-16 w-auto object-contain rounded-2xl" />
                    </a>
                </div>

                <!-- Avathartech -->
                <div class="relative p-4 sm:p-5 rounded-2xl bg-white dark:bg-[#361804]
              border border-gray-200 dark:border-[#FBA030]/60
              transition-transform duration-300 hover:scale-105">
                <span class="absolute -top-3 left-5 px-3 py-1 text-xs font-semibold rounded-full bg-[#FBA030] text-white shadow">
                  Geek
                </span>
                    <a href="https://avathartech.com/" target="_blank" rel="noopener noreferrer">
                        <img src="/images/sponsors/avathar.png" alt="Avathartech"
                             class="h-10 sm:h-16 w-auto object-contain rounded-2xl" />
                    </a>
                </div>

                <!-- Alphnology -->
                <div class="relative p-4 sm:p-5 rounded-2xl bg-white dark:bg-[#361804]
              border border-gray-200 dark:border-[#FBA030]/60
              transition-transform duration-300 hover:scale-105">
                <span class="absolute -top-3 left-5 px-3 py-1 text-xs font-semibold rounded-full bg-[#FBA030] text-white shadow">
                  Geek
                </span>
                    <a href="https://www.alphnology.com" target="_blank" rel="noopener noreferrer">
                        <img src="/images/sponsors/alphnology.png" alt="Alphnology"
                             class="h-10 sm:h-16 w-auto object-contain rounded-2xl" />
                    </a>
                </div>

                <!-- PUCMM -->
                <div class="relative p-4 sm:p-5 rounded-2xl bg-white dark:bg-[#361804]
              border border-gray-200 dark:border-[#FBA030]/60
              transition-transform duration-300 hover:scale-105">
                    <span class="absolute -top-3 left-5 px-3 py-1 text-xs font-semibold rounded-full bg-[#FBA030] text-white shadow">
                      Crew
                    </span>
                    <a href="https://www.pucmm.edu.do" target="_blank" rel="noopener noreferrer">
                        <img src="/images/sponsors/pucmm.png" alt="PUCMM"
                             class="h-10 sm:h-16 w-auto object-contain rounded-2xl" />
                    </a>
                </div>
            </div>

        </Container>
    </section>



</Layout>
